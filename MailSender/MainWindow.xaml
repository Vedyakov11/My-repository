<Window x:Class="MailSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender"
        xmlns:data="clr-namespace:MailSender.Data"
        xmlns:entityes="clr-namespace:MailSender.Entityes"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Файл"></MenuItem>
        </Menu>
        <StatusBar Grid.Row="2">
            <TextBlock>Готов</TextBlock>
        </StatusBar>
        <ResizeGrip Grid.Row="2" HorizontalAlignment="Right"/>
        <TabControl Grid.Row="1">
            <TabItem Header="Формирование групп рассылки">
                <DockPanel LastChildFill="False">
                    <ToolBarTray DockPanel.Dock="Top">
                        <ToolBarTray.Resources>
                            <Style TargetType="{x:Type Image}">
                                <Setter Property="Height" Value="16"/>
                            </Style>
                        </ToolBarTray.Resources>
                        <ToolBar>
                            <TextBlock Text="Отправители" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <ComboBox Width="150" SelectedIndex="1"
                                      DisplayMemberPath="Name"
                                      ItemsSource="{x:Static data:TestData.Senders}"/>
                            <Button ToolTip="Добавить">
                                <Image Source="Media/add.jpg"/>
                            </Button>
                            <Button ToolTip="Редактировать">
                                <Image Source="Media/edit.jpg"/>
                            </Button>
                            <Button ToolTip="Удалить">
                                <Image Source="Media/remove.jpg"/>
                            </Button>
                        </ToolBar>
                        <ToolBar Band="1">
                            <TextBlock Text="Сервера" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <ComboBox Width="150" SelectedIndex="1"
                                      ItemsSource="{x:Static data:TestData.Servers}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate DataType="{x:Type entityes:Server}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Name}"/>
                                            <TextBlock Text="{Binding Address}" Margin="4,0,0,0" Opacity="0.6"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <Button ToolTip="Добавить">
                                <Image Source="Media/add.jpg"/>
                            </Button>
                            <Button ToolTip="Редактировать">
                                <Image Source="Media/edit.jpg"/>
                            </Button>
                            <Button ToolTip="Удалить">
                                <Image Source="Media/remove.jpg"/>
                            </Button>
                        </ToolBar>
                        <ToolBar>
                            <TextBlock Text="Перейти в планировщик" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <Button>
                                <Image Source="Media/Scheduler.jpg"/>
                            </Button>
                        </ToolBar>
                        <ToolBar Band="1">
                            <TextBlock Text="Список адресатов" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <Button ToolTip="Добавить">
                                <Image Source="Media/add.jpg"/>
                            </Button>
                            <Button ToolTip="Редактировать">
                                <Image Source="Media/edit.jpg"/>
                            </Button>
                            <Button ToolTip="Удалить">
                                <Image Source="Media/remove.jpg"/>
                            </Button>
                        </ToolBar>
                    </ToolBarTray>
                </DockPanel>
            </TabItem>
            <TabItem Header="Планировщик"></TabItem>
            <TabItem Header="Редактор писем"></TabItem>
            <TabItem Header="Статистика" IsEnabled="False"></TabItem>
        </TabControl>
    </Grid>
</Window>
